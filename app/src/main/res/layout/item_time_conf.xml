<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/colorAccent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSerieOrRound1"
        style="@style/Typo24Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        tools:text="Serie 1" />

    <EditText
        android:id="@+id/etSerieOrRoundTime"
        style="@style/Typo24Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2.5"
        android:background="@drawable/edittext_border"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:maxLength="5"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:enabled="true"
        android:focusable="false"
        tools:text="00:10" />

    <TextView
        style="@style/Typo16RegularWhite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/seconds" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addRoundOrSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_add"
            android:tint="@color/colorText100" />

        <ImageView
            android:id="@+id/removeRoundOrSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:tint="@color/colorText100" />

    </LinearLayout>

</LinearLayout>